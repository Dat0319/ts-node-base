{
  "name": "ts-node-base",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Long Phuong",
  "license": "MIT",
  "scripts": {
    "start:test": "cross-env NODE_ENV=local nodemon --watch 'src/**/*.ts' --exec node --require ts-node/register ./src/index.ts",
    "start": "cross-env NODE_ENV=local nodemon --watch 'src/**/*.ts' --exec node --inspect --require ts-node/register ./src/index.ts",
    "build:local": "npm run build && node dist/index.js",
    "build": "rimraf ./dist && tsc",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:format && npm run lint"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "helmet": "^4.6.0",
    "mongoose": "^6.0.2",
    "signale": "^1.4.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^15.6.1",
    "@types/signale": "^1.4.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
