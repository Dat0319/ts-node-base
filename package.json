{
  "name": "ts-node-base",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Long Phuong",
  "description": "Typescript node base with NodeJs, Express, PostgreSQL",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=local nodemon --watch 'src/**/*.ts' --exec node --inspect --require ts-node/register ./src/index.ts",
    "build": "rimraf ./dist && tsc",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "test": "mocha -r ts-node/register src/api/**/*.spec.ts",
    "test:coverage": "nyc npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:format && yarn lint"
    }
  },
  "dependencies": {
    "ajv": "^8.6.2",
    "ajv-errors": "^3.0.0",
    "axios": "^0.26.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "got": "11.8.3",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "pm2": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "signale": "^1.4.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.43"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.0",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.4",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^15.6.1",
    "@types/signale": "^1.4.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "4.3.8",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.5"
  }
}
